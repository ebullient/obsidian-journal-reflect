{
  "name": "obsidian-journal-reflect",
  "version": "0.1.0",
  "private": true,
  "description": "Journal reflection plugin for Obsidian (https://obsidian.md)",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "fix": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format ./src",
    "lint": "npx @biomejs/biome lint ./src",
    "test:ollama": "vitest run tests/ollama-integration.test.ts",
    "prebuild": "npx @biomejs/biome check ./src",
    "build": "node esbuild.config.mjs production",
    "postbuild": "cp -v manifest.json README.md build",
    "preversion": "npm run build",
    "version": "auto-changelog -p",
    "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
  },
  "keywords": [
    "obsidian",
    "obsidian-md",
    "obsidian-plugin",
    "obsidian-md-plugin"
  ],
  "author": "ebullient",
  "repository": "github.com:ebullient/obsidian-journal-reflect",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/codemirror": "5.60.16",
    "@types/node": "^24.3.1",
    "auto-changelog": "^2.5.0",
    "builtin-modules": "^5.0.0",
    "dotenv": "^17.2.2",
    "esbuild": "^0.25.9",
    "esbuild-sass-plugin": "^3.3.1",
    "moment": "^2.30.1",
    "obsidian": "^1.8.7",
    "tslib": "^2.8.1",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@codemirror/language": "https://github.com/lishid/cm-language",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.2",
    "ollama": "^0.6.0"
  },
  "auto-changelog": {
    "backfillLimit": false,
    "commitLimit": false,
    "ignoreCommitPattern": "(ðŸ”–|ðŸ”¨|ðŸ§¹|changelog|release|Update README).*"
  }
}
